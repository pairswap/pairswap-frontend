{
  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2,
        "semi": true,
        "trailingComma": "es5",
        "printWidth": 100
      }
    ],
    "react/react-in-jsx-scope": "off"
  }
}
